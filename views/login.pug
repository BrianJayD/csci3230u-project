	title= title

	link(rel="stylesheet",href="stylesheets/generated.css")

	body
		div(id="bodyTag" class="center")
			h2 LOGIN
			div(id="content", class="center")= message
			form(action="/main", method="post",class="form-vertical")
				//- label(for="email") Email:

				input(type="text",
					id="email",
					name="email",
					placeholder="Email",
					class="form-control")

				//- label(for="password") Password:

				input(type="password",
					id="password",
					name="password",
					placeholder="Password",
					class="form-control")
				
				div(id="login")
					button(type="submit") Login
					

			form(action="/create", method="post",class="form-vertical")
				button(
			  	type='submit'
				) Create a New Account

		
		
